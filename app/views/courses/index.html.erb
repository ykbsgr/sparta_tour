<p id="notice"><%= notice %></p>

<h1>Listing Courses</h1>

<table>
  <thead>
    <tr>
      <th>Tour date</th>
      <th>Guide name</th>
      <th>Title</th>
      <th>Description</th>
      <th>Lower limit</th>
      <th>Upper limit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.tour_date %></td>
        <td><%= course.guide_name %></td>
        <td><%= course.title %></td>
        <td><%= course.description %></td>
        <td><%= course.lower_limit %></td>
        <td><%= course.upper_limit %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

